{
  "window.commandCenter": true,
  "window.menuBarVisibility": "classic",
  "window.titleBarStyle": "custom",

  "workbench.colorTheme": "Material Theme Darker High Contrast",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "material-product-icons",
  "workbench.settings.editor": "json",

  "editor.acceptSuggestionOnEnter": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.fontFamily": "Iosevka Term, JetBrains Mono, Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.inlayHints.enabled": "onUnlessPressed",
  "editor.letterSpacing": 1.0,
  "editor.lineHeight": 22,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.semanticTokenColorCustomizations": {
    "[Material Theme Darker High Contrast]": {
      "enabled": true
    }
  },
  "editor.suggestSelection": "first",

  "terminal.external.linuxExec": "konsole",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.letterSpacing": 1.0,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "zsh"
    }
  },

  "telemetry.telemetryLevel": "off",
  "extensions.ignoreRecommendations": true,
  "npm.fetchOnlinePackageInfo": false,

  "debug.allowBreakpointsEverywhere": true,



  "evenBetterToml.formatter.alignEntries": false,
  "evenBetterToml.formatter.columnWidth": 99,
  "evenBetterToml.formatter.compactArrays": false,
  "evenBetterToml.formatter.compactInlineTables": false,
  "evenBetterToml.formatter.indentTables": false,
  "evenBetterToml.formatter.reorderKeys": false,
  "evenBetterToml.semanticTokens": true,

  // Git
  // "git.autofetch": "all",
  "git.autofetch": false,
  "git.autofetchPeriod": 600,
  "git.branchSortOrder": "committerdate",
  "git.branchWhitespaceChar": "-",
  "git.closeDiffOnOperation": true,
  "git.confirmEmptyCommits": true,
  "git.decorations.enabled": true,
  "git.detectSubmodules": true,
  "git.enableCommitSigning": true,
  "git.enabled": true,
  "git.promptToSaveFilesBeforeCommit": "always",
  "git.promptToSaveFilesBeforeStash": "always",
  "git.timeline.date": "authored",
  "git.useEditorAsCommitInput": true,
  "gitlens.defaultDateStyle": "absolute",
  "gitlens.defaultGravatarsStyle": "identicon",
  "scm.defaultViewMode": "tree",
  "scm.diffDecorations": "all",
  "scm.diffDecorationsIgnoreTrimWhitespace": "false",

  "material-icon-theme.folders.color": "#42a5f5",
  "material-icon-theme.folders.theme": "specific",

  "materialTheme.accent": "Blue",
  "rust-analyzer.cargo.features": "all",
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.completion.autoimport.enable": true,
  "rust-analyzer.debug.engine": "vadimcn.vscode-lldb",
  "rust-analyzer.imports.granularity.enforce": true,
  "rust-analyzer.imports.granularity.group": "crate",
  "rust-analyzer.imports.prefix": "crate",

  "go.useLanguageServer": true,

  "python.languageServer": "Microsoft",
  "python.showStartPage": false,


  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[python]": {
    "editor.renderFinalNewline": true,
    "editor.rulers": [88],
    "editor.trimAutoWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true
  },

  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.renderFinalNewline": true,
    "editor.rulers": [99],
    "editor.trimAutoWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true
  },

  "[shellscript]": {
    "editor.tabSize": 2,
    "files.eol": "\n"
  },

  "[toml]": {
    "editor.renderFinalNewline": true,
    "editor.trimAutoWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true
  }
}
